<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2" 
    android:orientation="vertical" >
            
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/tou_weight_height2"
             
                     
             >
            <FrameLayout 
                android:id="@+id/frame_head"
                android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:layout_marginLeft="10dip"		        
		        android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"                 
                >
            <ImageView
                android:id="@+id/info_head"
                android:layout_width="@dimen/tou_weight_height5"
		        android:layout_height="@dimen/tou_weight_height5" 		                    
                android:src="@drawable/ic_discover_nearby_personal" />
            
            
            
            
            </FrameLayout>
            
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/frame_head"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/frame_head"
                android:layout_marginLeft="10dip"
                android:layout_toRightOf="@id/frame_head" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/jianju2"
                    android:src="@drawable/mm_submenu_normal" />

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/jianju2"
                    android:layout_toLeftOf="@+id/info_last" >

                    <TextView
                        android:id="@+id/info_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="用户名称"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/jianju2"
                        android:layout_toRightOf="@+id/info_name"
                        android:background="@drawable/s_n_homepage_bg_women_b"
                        android:gravity="right|center_vertical"
                        android:text="19"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/info_last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/relativeLayout1"
                    android:layout_toLeftOf="@+id/imageView1"
                    android:maxLength="18"
                    android:singleLine="true"
                    android:text="0.8m"
                    android:textColor="#666" />

            </RelativeLayout>
            
        </RelativeLayout>
        
        
          
        

 </LinearLayout>
