<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
    <RelativeLayout
        android:id="@+id/detail_title"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/s_search_bg"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/mime_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/back_seletor"
            android:text="@string/back"
            android:textColor="@drawable/text_blue"
             android:textSize="@dimen/sixteen"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="详情"
            android:textColor="@color/black_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mime_detail_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:text="@string/more"
            android:textColor="@drawable/text_blue"
             android:textSize="@dimen/sixteen"
            />
    </RelativeLayout>
    
    
   
 
    <com.smt.pullview.util.RefreshableView  
    android:id="@+id/ll_mid"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_below="@id/detail_title"
    android:layout_above="@+id/bottom_relativeLayout" 
    >
   
        
     <ScrollView
            
            android:id="@+id/scroll_view_root"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" 
            android:scrollbars="none"
            android:fillViewport="true"
            
            >    
        
     <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
         > 
        
   <RelativeLayout         
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="10dip"
       android:layout_marginTop="5dip"
        >
        
       <ImageView
            android:id="@+id/iv"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:background="@drawable/tou"
            android:scaleType="fitXY" />
    
  </RelativeLayout>
  
   
   <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="10dip"
        android:orientation="vertical"   
       >

     <RelativeLayout 
            android:layout_width="fill_parent"
           android:layout_height="wrap_content" 
           android:layout_marginTop="5dip"
                      
            >   
             <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                   
                    android:text="茶市在线"
                    android:textColor="#5e78ab"
                    android:textStyle="bold"
                    android:textSize="18.0sp" /> 
                    
               <TextView
                    android:id="@+id/contenttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"   
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dip"                
                    android:text="am 11:30"
                    android:textColor="@color/gray"
                    android:textSize="16.0sp" /> 
      
             
        </RelativeLayout>
        
     
     
         <RelativeLayout 
            android:layout_width="fill_parent"
           android:layout_height="wrap_content" 
           android:layout_marginTop="15dip"
                      
            >   
             <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                   
                    android:text="邓紫棋叛逆史：曾自曝床照 大骂胡杏儿吴卓羲邓丽欣"
                    android:textColor="#404040"
                    android:textSize="16.0sp" /> 
                    
             
      
             
        </RelativeLayout>
     
          <LinearLayout 
                
           android:layout_width="fill_parent"
           android:layout_height="wrap_content" 
           android:layout_marginTop="5dip" 
           android:orientation="vertical"
           android:background="#f2f2f2"           
                
                >
     
         <RelativeLayout 
            android:layout_width="fill_parent"
           android:layout_height="wrap_content" 
           android:layout_marginTop="10dip"
           android:layout_marginLeft="10dip"
           android:layout_marginRight="10dip"
           android:layout_marginBottom="10dip"
         
            > 
           
            
              <ImageView
            android:id="@+id/share_img"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:background="@drawable/tou"
            android:scaleType="fitXY" />
             
             
               <TextView
                    android:id="@+id/share_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  
                    android:layout_toRightOf="@id/share_img" 
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"                
                    android:text="随着《歌手》的热播，邓紫棋迅速在内地走红，据了解她的粉丝透露"
                    android:textColor="#404040"
                    android:textSize="16.0sp" /> 

        </RelativeLayout>
        
         
           

     </LinearLayout>
     
          <LinearLayout
         android:id="@+id/image_container" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dip"
        android:orientation="vertical"
        >
         
            <ImageView
            android:id="@+id/sh"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_marginLeft="5dip"
            android:background="@drawable/tou"
            android:scaleType="fitXY" />   
              
              
           
        </LinearLayout>
          
          
      
          
            <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
              
            >  
 
           <RelativeLayout 
            android:layout_width="fill_parent"
           android:layout_height="wrap_content" 
           android:layout_centerVertical="true"
           android:layout_toLeftOf="@+id/comment_good_iv"
           android:layout_marginRight="10dip"
         
            >  
            
             <RelativeLayout 
        	android:id="@+id/show_local"
            android:layout_width="fill_parent"
           android:layout_height="wrap_content"        
           android:layout_marginTop="5dip"
            > 
           
            
              <ImageView
            android:id="@+id/local_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/group_icon_location"
            android:scaleType="fitXY" />
             
             
               <TextView
                    android:id="@+id/local_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  
                    android:layout_toRightOf="@id/local_icon" 
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"                
                    android:text="湖里区政府"
                    android:textColor="#808080"
                    android:textSize="13.0sp" /> 

        </RelativeLayout>    
               
             
             
            <RelativeLayout 
        	android:id="@+id/show_g"
            android:layout_width="fill_parent"
           android:layout_height="wrap_content" 
            android:layout_below="@id/show_local"        
           android:layout_marginTop="10dip"
            > 
           
            
            <TextView
            android:id="@+id/local_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="已同步到群组"
            android:textColor="#808080"
          />
             
             
               <TextView
                    android:id="@+id/local_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  
                    android:layout_toRightOf="@id/local_icon" 
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"                
                    android:text="茶友组"
                    android:textColor="#5e78ab"
                    android:textSize="13.0sp" /> 

        </RelativeLayout>       
             
             
             
               
               
          <RelativeLayout 
              android:id="@+id/gc_lay"
              android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/show_g" 
             android:layout_marginTop="10dip" 
              >   
               
            <TextView
                    android:id="@+id/good_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                   
                    android:text="19"
                    android:textColor="@color/gray"
                    android:textSize="14.0sp" />  
             <TextView
                    android:id="@+id/good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                    
                    android:layout_toRightOf="@id/good_num"  
                    android:layout_marginLeft="2dip"                 
                    android:text="人赞了"
                    android:textColor="@color/gray"
                    android:textSize="14.0sp" /> 
                 
                
             
             
              <TextView
                    android:id="@+id/comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:layout_toRightOf="@id/good"  
                    android:layout_marginLeft="10dip"               
                    android:text="36"
                    android:textColor="@color/gray"
                    android:textSize="14.0sp" /> 
               <TextView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:layout_toRightOf="@id/comment_num"  
                    android:layout_marginLeft="2dip"               
                    android:text="条评论"
                    android:textColor="@color/gray"
                    android:textSize="14.0sp" />  
                    
               </RelativeLayout> 
               
             
               
               
               
               
           
         </RelativeLayout> 

             <ImageView
            android:id="@+id/comment_good_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/feed_praise_nor"
            android:scaleType="fitXY" />
             
        </RelativeLayout> 
        
      
     
     
        
          <LinearLayout 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"    
              >
              
            
           <RelativeLayout 
            android:layout_width="45dip"
           android:layout_height="45dip" 
           android:layout_marginTop="15dip"
           android:background="@null"
            > 
           
            
              <ImageView
            android:id="@+id/share_heart"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/tou"
            android:scaleType="fitXY" />
             
             <ImageView
            android:id="@+id/good_heart"
            android:layout_width="12dip"
            android:layout_height="12dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/feed_praise_select"
            android:scaleType="fitXY" /> 
             

        </RelativeLayout>  
        
           </LinearLayout> 
           
            
        
          
           <LinearLayout 
            android:id="@+id/comment_container" 
            android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dip"          
           android:orientation="horizontal"
            > 
            
            <ImageView
            android:id="@+id/share_heart1"
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/tou"
            android:scaleType="fitXY" />

            <RelativeLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="5dip"  
                >
             
             <RelativeLayout 
           android:id="@+id/name"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"   
                 
                 >
            
               <TextView
                    android:id="@+id/comment_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" 
                    android:singleLine="true"                               
                    android:text="邻居的耳朵"
                    android:layout_toLeftOf="@+id/time"
                    android:textColor="#5e78ab"
                    android:textSize="18.0sp" />
               
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dip"                              
                    android:text="AM 10:25"
                    android:textColor="#7888a9"
                    android:textSize="12.0sp" />
               
               
               </RelativeLayout>   
               
               
               
               <TextView
                    android:id="@+id/comment_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:layout_below="@id/name"
                    android:layout_marginTop="2dip"                            
                    android:text="哈哈"
                    android:textColor="#000"
                    android:textSize="16.0sp" />
              </RelativeLayout> 
            

      </LinearLayout>   
     
     
     
   </LinearLayout>
   
   </LinearLayout> 
   
</ScrollView>
</com.smt.pullview.util.RefreshableView>
 
    <LinearLayout 
       android:id="@+id/bottom_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="#000"     
        android:layout_alignParentBottom="true"  
        
        >
    <LinearLayout
        android:id="@+id/de_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:orientation="horizontal" 
 >
        
     
        <RelativeLayout 
                   android:id="@+id/ll_fasong_relate"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"                 
                  android:layout_gravity="center_vertical"
                    >

                 <com.smt.util.t.KeyboardListenEdittext
                    android:id="@+id/commentmessage_et"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_bg"  
                    android:layout_toLeftOf="@+id/detail_face"                              
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:hint="评论:"
                    android:paddingLeft="10dip"           
                    android:textSize="18sp"
                    android:maxHeight="120dip"
                    android:textColor="#000000" />

                
                 
    
        <ImageButton        
      android:id="@+id/detail_face"  
      android:layout_height="wrap_content"  
      android:layout_width="wrap_content"
      android:layout_toLeftOf="@+id/btn_send"
      android:layout_centerVertical="true"
      android:background="@drawable/s_n_chat_bottom_btn_smail_hover"
     
        />   
  
                
                
                
                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="3dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/black_btn_seletor"
                    android:layout_marginRight="2dip"
                    android:layout_marginTop="1dip"
                    android:text="发送"
                    android:textSize="18sp"
                    android:textColor="#fff"
                     />
                            
                  </RelativeLayout>
        
 
     </LinearLayout>
       
    
    
       <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="wrap_content"
            android:layout_height="170dip"
            android:layout_marginTop="2dip"
            android:layout_gravity="center"
            android:background="#f32f33"
            android:visibility="gone"
            >
        </android.support.v4.view.ViewPager>
        
         <LinearLayout
            android:id="@+id/page_select"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewpager"
            android:layout_marginBottom="3dip"
            android:background="#ddd"
        	android:gravity="center_horizontal" 
        	  android:visibility="gone"  
           >
            
            <ImageView
            	android:id="@+id/page0_select"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"        	     	
        		android:scaleType="matrix"
        		android:src="@drawable/page_focused" />
            <ImageView
            	android:id="@+id/page1_select"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="10dp"        	     	
        		android:scaleType="matrix"
        		android:src="@drawable/page_unfocused" />
            <ImageView
            	android:id="@+id/page2_select"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="10dp"           	     	
        		android:scaleType="matrix"
        		android:src="@drawable/page_unfocused" />  
        		  <ImageView
            	android:id="@+id/page3_select"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="10dp"           	     	
        		android:scaleType="matrix"
        		android:src="@drawable/page_unfocused" />  
        		  <ImageView
            	android:id="@+id/page4_select"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="10dp"           	     	
        		android:scaleType="matrix"
        		android:src="@drawable/page_unfocused" />           
        </LinearLayout> 
    
    
    
    
    
    
    
    
       </LinearLayout>

</RelativeLayout>