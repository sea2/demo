<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout    
   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
        android:background="#f2f2f2"
    >

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:layout_above="@+id/choosechatting_bottom"
    
     >
    
      <RelativeLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="50dip" 
  			android:id="@+id/title" 
  			android:background="@drawable/s_search_bg"
  			android:gravity="center_vertical" 
  			
  			 >  

      		<TextView
            android:id="@+id/activity_choose_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/back_seletor"
            android:text="@string/back"
            android:textColor="@drawable/text_blue"
             android:textSize="@dimen/sixteen"
         />
				
      		<TextView
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:text="选择好友"
                android:layout_centerInParent="true"
        		android:textSize="20sp"    		     		        		
				android:textColor="@color/black_color" /> 
				
            
				


      	</RelativeLayout>
      	


       <ListView
            android:id="@+id/choose_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"         
            android:divider="@drawable/line"
            android:headerDividersEnabled="false"
            android:footerDividersEnabled="true"
            android:drawSelectorOnTop="true"
            android:background="#fcfcfc"
            android:scrollbars="none" />



</LinearLayout>


<RelativeLayout 
    android:id="@+id/choosechatting_bottom"
    android:layout_width="match_parent"
   android:layout_height="60dip" 
   android:layout_alignParentBottom="true"
   android:background="@color/black_color"
    >
   
  
   <TextView
    android:id="@+id/choosecheck_tv"
    android:layout_width="wrap_content"
    android:layout_height="40dip"
    android:textSize="16sp"
    android:text="添加(6/99)"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:layout_centerVertical="true"
    android:gravity="center_vertical"
    android:layout_alignParentRight="true"
    android:layout_marginRight="10dip"
    android:textColor="@color/lightwhite"
    android:clickable="true"  
    android:background="@drawable/choose_seletor"  

       /> 
   
</RelativeLayout>

</RelativeLayout>