        android:layout_marginLeft="10dip"
        android:layout_centerVertical="true"  
        android:layout_toRightOf="@id/add_img_03" 
        android:text="邀请手机联系人"
        android:textSize="16sp"
        android:textColor="#202020"
       
        />
          <ImageView
                android:id="@+id/row_img_03"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"  
        		android:layout_marginRight="10dip"      	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:src="@drawable/mm_submenu" />
              
       

          </RelativeLayout>
          
          <ImageView 
              
             android:layout_width="fill_parent"
             android:layout_height="1dip"    
             android:background="@drawable/line"
             android:layout_marginLeft="60dip" 
              
              />
          
          
          <RelativeLayout
        android:id="@+id/add_layout_04"
        android:layout_width="fill_parent"
        android:layout_height="42dip"      
        android:clickable="true"
      
      
        >
          <ImageView
            android:id="@+id/add_img_04"
            android:layout_width="36.0dip"
            android:layout_height="36.0dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/s_add_contact_weixin"
            android:scaleType="fitXY" />
           <TextView
        android:id="@+id/card_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10dip"
        android:layout_centerVertical="true"  
        android:layout_toRightOf="@id/add_img_04" 
        android:text="邀请微信好友"
