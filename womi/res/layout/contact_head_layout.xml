<?xml version="1.0" encoding="UTF-8"?>
      
    	<LinearLayout
    	    xmlns:android="http://schemas.android.com/apk/res/android"
    	    android:id="@+id/main_dialog_layout"
	      	android:layout_width="fill_parent"
        	android:layout_height="wrap_content" 
        	android:background="@null"      	
        	android:orientation="vertical"
        	 >
        	 
   <com.smt.util.t.ClearEditText
        android:id="@+id/filter_edit"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="25dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/search_bar_edit_selector"
        android:drawableLeft="@drawable/search_bar_icon_normal"
        android:hint="请输入关键字"
        android:singleLine="true"
        android:textSize="15.0dip" />
    
  <RelativeLayout
            android:id="@+id/new_lay"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:background="@drawable/tm_button_white_bg"         
            android:clickable="true"          
             >
            
            <ImageView
                android:id="@+id/newf"
                android:layout_width="55dp"
		        android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:src="@drawable/s_chat_friend3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/newf"
                android:layout_marginLeft="2dip"
                android:padding="7dp"
                android:layout_centerVertical="true"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="新的好友"
                android:textColor="#000" />
            
               <ImageView
                   android:id="@+id/img_araow"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"        	     	
        		android:scaleType="matrix"
        		android:layout_marginRight="20dip"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:src="@drawable/mm_submenu" />  
        		
               
                 <TextView
                       android:id="@+id/new_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" 
                        android:layout_toLeftOf="@id/img_araow"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:gravity="center"             
                        android:textSize="12sp"
                        android:textColor="#fff" 
                        android:background="@drawable/wode_icon_01"
                        android:visibility="gone"
                        />     
           
                  </RelativeLayout>
    		
    		<RelativeLayout
            android:id="@+id/group_lay"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:background="@drawable/tm_button_white_bg"         
            android:clickable="true"                       
             >
            
            <ImageView
                android:id="@+id/group"
                android:layout_width="55dp"
		        android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:src="@drawable/v1_7_ic_contact_my_group" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/group"
                android:layout_marginLeft="2dip"
                android:padding="7dp"
                android:layout_centerVertical="true"
                android:textAppearance="?android:textAppearanceMedium"
                android:text="我的群组"
                android:textColor="#000" />
            
               <ImageView
                   android:id="@+id/img_araow_01"
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"        	     	
        		android:scaleType="matrix"
        		android:layout_marginRight="20dip"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:src="@drawable/mm_submenu" />  
        		
               
                
           
                  </RelativeLayout>  
                  
    		
    		 
           
       </LinearLayout>

