 <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"   
      >
  <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/s_search_bg" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/start"
            android:textColor="@color/black_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/activity_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/back_seletor"
            android:text="@string/back"
            android:textColor="@drawable/text_blue"
            android:textSize="@dimen/sixteen" />
        

             <TextView
                android:id="@+id/activity_send" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:background="@null"
                android:layout_centerVertical="true"
                android:textColor="@drawable/text_blue"
                 android:textSize="@dimen/sixteen"
                android:text="@string/finished" />
      
    </RelativeLayout>  
    
    <ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"            
        >
    
  <LinearLayout 
     
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"   
    android:orientation="vertical"  
      >
   
      
          <RelativeLayout
      				    android:id="@+id/activtiy_time"
            			android:layout_width="fill_parent"
            			android:layout_height="50dip"
            			android:gravity="center_vertical"
            		    android:layout_marginTop="10dip"
            			android:clickable="true"
            			android:background="@drawable/tm_button_white_bg" >
            			 
        				    
            			 <TextView
            			    android:id="@+id/mtv_01"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"        				       				
        					android:layout_centerVertical="true"
        					android:layout_marginLeft="10dip"
        					android:text="活动时间"
        					android:textSize="14sp"		
							android:textColor="#000" />
            			
            			 <TextView
            			     android:id="@+id/time_tv"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:layout_toRightOf="@id/mtv_01"
        					android:layout_marginLeft="10dip"
        					android:layout_marginRight="10dip"
        					android:layout_centerVertical="true"
        					android:padding="8dp" 
        					android:text=""
        					android:textSize="14sp"		
							android:textColor="#000" />

            			 
            			 <TextView
            			    android:id="@+id/update_time"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"        				       				
        					android:layout_centerVertical="true"
        					android:layout_alignParentRight="true"
        					android:layout_marginRight="10dip"
        					android:text="更新时间"
        				    android:textColor="@drawable/text_blue"
                            android:textSize="@dimen/sixteen"
                            />
            			 
										
      				</RelativeLayout>  
        
        
                 <RelativeLayout
      				    android:id="@+id/activtiy_subject"
            			android:layout_width="fill_parent"
            			android:layout_height="50dip"
            			android:gravity="center_vertical"
            		    android:layout_marginTop="10dip"
            			android:clickable="true"
            			android:background="@drawable/tm_button_white_bg" >
            			 
        				    
            			 <TextView
            			    android:id="@+id/mtv_02"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"        				       				
        					android:layout_centerVertical="true"
        					android:layout_marginLeft="10dip"
        					android:text="活动主题"
        					android:textSize="14sp"		
							android:textColor="#000" />
            			
            			    <EditText
            			     android:id="@+id/subject_tv"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:layout_toRightOf="@id/mtv_02"
        					android:layout_marginLeft="10dip"
        					android:layout_marginRight="10dip"
        					android:layout_centerVertical="true"
        					android:padding="8dp"
        					android:maxLength="20"
        					android:singleLine="true" 
        					android:hint="输入主题，20字以内"
        					android:background="@null"
        					android:text=""
        					android:textSize="14sp"		
							android:textColor="#202020" />

										
      				</RelativeLayout>
        
                  <RelativeLayout
      				    android:id="@+id/activtiy_content"
            			android:layout_width="fill_parent"
            			android:layout_height="wrap_content"
            			android:gravity="center_vertical"
            		    android:layout_marginTop="10dip"            		   
            			android:clickable="true"
            			android:background="@drawable/tm_button_white_bg" >
            			 
        				    
            			 <TextView
            			    android:id="@+id/mtv_03"
        					android:layout_width="wrap_content" 
        					android:layout_height="50dip"        				       				
        					android:layout_centerVertical="true"
        					android:layout_marginLeft="10dip"
        					android:gravity="center"
        					android:text="活动内容"
        					android:textSize="14sp"		
							android:textColor="#000" />
            			
            			 <EditText
            			     android:id="@+id/content_tv"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:layout_toRightOf="@id/mtv_03"
        					android:layout_marginLeft="10dip"
        					android:layout_marginRight="10dip"
        					android:layout_centerVertical="true"
        					android:padding="8dp"
        					android:maxLength="200"        				
        					android:hint="输入活动内容，200字以内"
        					android:background="@null"
        					android:text=""
        					android:textSize="14sp"		
							android:textColor="#202020" />
			
      				</RelativeLayout>
        
                  
               <TextView
                    android:id="@+id/alert"
                    android:layout_width="fill_parent"
                    android:layout_height="40dip"     
                    android:layout_marginLeft="10dip" 
                    android:layout_marginRight="10dip" 
                    android:layout_marginTop="20dip"
                    android:gravity="center"              
                    android:text="@string/alert"
                    android:textColor="#808080"
                    android:textSize="13.0sp" />      
                  
       <RelativeLayout 
           android:id="@+id/show_local"
            android:layout_width="fill_parent"
           android:layout_height="50dip" 
           android:clickable="true"
           android:background="@drawable/tm_button_white_bg"
            > 
           
            
              <ImageView
            android:id="@+id/local_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/s_n_dynamic_btn_gps_unselected"
            android:scaleType="fitXY" />
             
             
               <TextView
                    android:id="@+id/local_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  
                    android:layout_toRightOf="@id/local_icon" 
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"                
                    android:text="@string/s_position"
                    android:textColor="#808080"
                    android:textSize="13.0sp" /> 
                    
              <ImageView
                android:id="@+id/row_img"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"  
        		android:layout_marginRight="10dip"      	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:src="@drawable/mm_submenu" />    
               
               
               
               

        </RelativeLayout>
  
  </LinearLayout>
  
    </ScrollView>
    
   </LinearLayout>

