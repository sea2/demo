<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/s_search_bg"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/mime_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/back_seletor"
            android:text="@string/back"
            android:textColor="@drawable/text_blue"
             android:textSize="@dimen/sixteen"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_toLeftOf="@+id/mime_detail"
            android:layout_toRightOf="@id/mime_back"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/circle_info"
            android:textColor="@color/black_color"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mime_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:text="@string/title_introduce"
            android:textColor="@drawable/text_blue"
             android:textSize="@dimen/sixteen"
            android:visibility="invisible" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/title" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/touxiang_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                style="@style/style_top_lay">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/imageView5"
                    android:background="#ffffff" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="@dimen/tou_weight_height3"
                        android:layout_height="@dimen/tou_weight_height3"
                        android:layout_marginRight="@dimen/jianju"
                        android:src="@drawable/tou" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginRight="@dimen/jianju"
                        android:src="@drawable/tou" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginRight="@dimen/jianju"
                        android:src="@drawable/tou" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_marginRight="@dimen/jianju"
                        android:src="@drawable/tou" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/member_arrow_1_5" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lianmeng_layout"
                style="@style/style_middle_lay"
                android:paddingTop="@dimen/jianju"
                android:paddingBottom="@dimen/jianju"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/group_lianmeng" 
                    android:textColor="@color/setting_color1"/>

                <TextView
                    android:id="@+id/textView2"
                    style="@style/tv_left_margin"
                    android:textColor="@color/setting_color1"
                    android:drawableRight="@drawable/member_arrow_1_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/textView1"
                    android:text="女生群联盟" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lianmeng_qun_exit"
                style="@style/style_middle_lay"
                android:paddingTop="@dimen/jianju"
                android:paddingBottom="@dimen/jianju"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue2"
                    android:text="@string/exit_group_lianmeng" />
            </RelativeLayout>

            <LinearLayout
                style="@style/style_middle_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    style="@style/style_middle_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/setting_color1"
                        android:text="@string/group_name" />

                    <TextView
                        android:id="@+id/textView11"
                        style="@style/tv_left_margin"
                        android:textColor="@color/setting_color1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/textView6"
                        android:text="魔兽世界" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/line" />

                <RelativeLayout
                    android:id="@+id/place"
                    style="@style/style_middle_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/setting_color1"
                        android:text="@string/group_place" />

                    <TextView
                        android:id="@+id/textView12"
                        style="@style/tv_left_margin"
                        android:textColor="@color/setting_color1"
                        android:drawableRight="@drawable/member_arrow_1_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/textView7"
                        android:text="广电大厦" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/line" />
                
                <RelativeLayout
                    style="@style/style_middle_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView8"
                        android:textColor="@color/setting_color1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/group_introduce" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView8"
                        android:layout_marginTop="6dp"
                        android:textColor="#8C8C8C"
                        android:text="那些年我们一起追过的魔兽世界" />
                </RelativeLayout>
                
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/line" />

                <RelativeLayout
                    android:id="@+id/group_class"
                    style="@style/style_middle_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/setting_color1"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/group_class" />

                    <TextView
                        android:id="@+id/textView5"
                        style="@style/tv_left_margin"
                        android:textColor="@color/setting_color1"
                        android:drawableRight="@drawable/member_arrow_1_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/textView4"
                        android:text="3级（成员上限200人）" />

                </RelativeLayout>
                
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/line" />

                <RelativeLayout
                    style="@style/style_middle_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView9"
                        android:textColor="@color/setting_color1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date_create" />

                    <TextView
                        android:id="@+id/textView14"
                        style="@style/tv_left_margin"
                        android:textColor="@color/setting_color1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/textView9"
                        android:text="2013年12月17日" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                style="@style/style_middle_lay"
                android:paddingTop="@dimen/jianju"
                android:paddingBottom="@dimen/jianju"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView10"
                    android:textColor="@color/setting_color1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_alignBottom="@+id/imageView7"
                    android:layout_alignTop="@+id/imageView7"
                    android:text="@string/share_group" />

                <ImageView
                    android:id="@+id/imageView9"
                    style="@style/tv_left_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/member_arrow_1_5" />

                <ImageView
                    android:id="@+id/imageView7"
                    style="@style/tv_left_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageView9"
                    android:src="@drawable/qrcode_icon" />

            </RelativeLayout>

            <LinearLayout
                style="@style/style_middle_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/new_msg_lay"
                    style="@style/style_middle_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView16"
                        android:textColor="@color/setting_color1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/new_message_" />

                    <TextView
                        android:id="@+id/new_message"
                        android:drawableRight="@drawable/member_arrow_1_5"
                        style="@style/tv_left_margin"
                        android:textColor="@color/setting_color1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="智能   " />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/line" />
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
	                    style="@style/style_middle_view"
                        android:id="@+id/textView18"
                        android:textColor="@color/setting_color1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/message_shouye" />

                    <com.smt.util.t.SlipButton
                        android:id="@+id/message_shouye"
                        android:layout_width="75dp"
                        android:layout_height="29dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"  />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/line" />
                
                <TextView
                    android:id="@+id/textView20"
                    style="@style/style_middle_view"
                    android:textColor="@color/setting_color1"
                    android:drawableRight="@drawable/member_arrow_1_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/set_chat_background" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/line" />
                
                <TextView
                    android:id="@+id/detail_setting"
                    style="@style/style_middle_view"
                    android:textColor="@color/setting_color1"
                    android:drawableRight="@drawable/member_arrow_1_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_setting" />
            </LinearLayout>

            <TextView
                android:id="@+id/clear_chating"
                style="@style/style_middle_lay"
                android:textColor="@color/setting_color1"
                android:paddingTop="@dimen/jianju"
                android:paddingBottom="@dimen/jianju"
                android:drawableRight="@drawable/member_arrow_1_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/clear_chating" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/jianju"
                android:background="@drawable/button_exit_askfor"
                android:text="@string/ask_for_circle" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>